{
	"compilerOptions": {
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"inlineSources": true,
		"sourceMap": true,
		"module": "ESNext",
		"target": "es6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "Node",
		"importHelpers": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"lib": ["dom", "es6", "scripthost", "es2019", "ES2021", "es2022"],
		"jsx": "react"
	},
	"include": ["**/*.ts", "main.tsx"]
}
